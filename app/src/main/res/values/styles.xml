<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="AutoSwitchVisibilityLayout">
        <attr name="defaultShowId" format="reference" />
        <attr name="errorLayout" format="reference" />
        <attr name="loadingLayout" format="reference" />
        <attr name="emptyLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwipeItemLayout.Layout">
        <attr name="layout_itemType">
            <flag name="main" value="0x01" />
            <flag name="menu" value="0x02" />
        </attr>
    </declare-styleable>
</resources>
